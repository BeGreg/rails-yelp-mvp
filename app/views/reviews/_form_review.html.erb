<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, :class => 'form-input cell' %>
    <%= f.input :rating, as: :radio_buttons, collection: 0..5 %>

  </div>
  <div class="form-group">
  </div>
  <%= f.submit "add a review", :class => 'btn btn-primary' %>
<% end %>
